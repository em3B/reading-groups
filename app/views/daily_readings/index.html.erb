<div class="wrapper">
  <div class="push"></div>
  <h1 class="text-center font-weight-bold text-white pt-5">Welcome, <%= current_user.name  %>!</h1>
  <h1 class="text-center font-weight-bold text-white pt-5">Choose Your Reading Below:</h1>
  <div class="subscription-btn-group">
    <% @daily_readings.each do |dr| %>
      <div class="subscription-btn text-center">
        <div class="subscription-img"><%= cl_image_tag("https://res.cloudinary.com/dm37aktki/image/upload/v1645889143/rcLnnE6pi_oa5si0.png")  %></div>
        <div class="fancy-link text-center"><%= link_to dr.session_date.strftime("%d %B"), daily_reading_path(dr.id) %></div>
      </div>
    <% end %>
  </div>
<div class="push"></div>
</div>
