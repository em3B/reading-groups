<div class="wrapper">
  <div class="push"></div>
  <h1 class="text-center font-weight-bold text-white pt-5">Welcome, <%= current_user.name  %>!</h1>
  <h1 class="text-center font-weight-bold text-white pt-5">Choose Your Reading Below:</h1>


  <div class="subscription-btn-group">
    <% @daily_readings.each do |dr| %>
      <% if dr.session_date == Date.today %>
        <%= link_to daily_reading_path(dr.id), remote: false do%>
          <div class="book-btn text-center">
            <div class="cover-img"><%= image_tag(dr.cover) %></div>
            <h3 class=" text-center"> <%= dr.session_date.strftime("%d %B")%> </h3>
          </div>
        <% end %>
      <% else %>
        <%= link_to daily_reading_path(dr.id), remote: false do%>
            <div class="subscription-btn text-center">
              <div class="cover-img"><%= image_tag(dr.cover) %></div>
              <h3 class=" text-center"> <%= dr.session_date.strftime("%d %B")%> </h3>
            </div>
          <% end %>
      <% end %>
    <% end %>
  </div>
<div class="push"></div>
</div>
